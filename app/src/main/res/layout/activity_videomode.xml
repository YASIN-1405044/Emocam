<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:background="#000000"
    tools:context="com.example.yasinislam.cameradetector.Videomode">

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/cameraPreview" />

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/changedPreview" />

    <Button
        android:id="@+id/capture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:background="@drawable/capture"/>

    <Button
        android:id="@+id/changeCamera"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/changecamera"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/no"
        android:layout_marginStart="14dp" />

    <Button
        android:id="@+id/settings"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/settings"
        android:layout_marginStart="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/yes"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/yes"
        android:layout_marginStart="17dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/settings" />

    <Button
        android:id="@+id/no"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/no"
        android:layout_marginStart="42dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/yes" />

</RelativeLayout>
