<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:background="@drawable/main"
    tools:context="com.example.yasinislam.cameradetector.MainActivity">

    <ImageView
        android:id="@+id/imageview2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/videomode"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/videomode"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/imageview2"
        android:layout_toEndOf="@+id/photomode" />

    <Button
        android:id="@+id/photomode"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/photomode"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/imageview2"
        android:layout_alignStart="@+id/imageview2" />

    <Button
        android:id="@+id/emovideoplayer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/emovideoplayer"
        android:layout_below="@+id/imageview2"
        android:layout_toEndOf="@+id/videomode"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/about"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/about"
        android:layout_below="@+id/imageview2"
        android:layout_toEndOf="@+id/emovideoplayer"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/photomode"
        android:layout_below="@+id/photomode"
        android:text=" Photo Mode"
        android:textColor="#ffff00"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/videomode"
        android:layout_below="@+id/videomode"
        android:text=" Video Mode"
        android:textColor="#ffff00"

        android:textSize="10dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emovideoplayer"
        android:layout_below="@+id/emovideoplayer"
        android:text=" Emo PLayer"
        android:textColor="#ffff00"
        android:textStyle="italic"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/about"
        android:layout_below="@+id/about"
        android:text="      Credits"
        android:textColor="#ffff00"
        android:textStyle="italic"
        android:textSize="10dp"/>




</RelativeLayout>
